<%= form_for(@article) do |f| %>
  <div class="field">
    <%= f.text_area :title, :placeholder =>"#{@article.title}" %>
  </div>  
  <div class="field">
    <%= f.text_area :content, :placeholder =>"#{@article.content}" %>
  </div>      
    <%= f.submit "投稿を更新", class:"btn btn-primary" %>
<% end %>